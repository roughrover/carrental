pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/roughrover/carrental.git'
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                sh 'docker compose down || true'
                sh 'docker compose up -d --build'
            }
        }
    }
}
