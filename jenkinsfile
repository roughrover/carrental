pipeline {
    agent any

    environment {
        COMPOSE_FILE = 'docker-compose.yaml'
        SERVICE_NAME = 'web' // Change if your docker-compose uses a different service name
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'git@github.com:your-username/your-repo.git'
            }
        }

        stage('Build') {
            steps {
                sh 'docker-compose build'
            }
        }

        stage('Test') {
            steps {
                // Example test command
                sh 'docker-compose run --rm web php -l index.php'
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker-compose down'
                sh 'docker-compose up -d'
            }
        }
    }

    post {
        success {
            echo 'üéâ Deployment successful!'
        }
        failure {
            echo '‚ùå Build or deploy failed.'
        }
    }
}
