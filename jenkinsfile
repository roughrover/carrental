pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/roughrover/carrental.git'
            }
        }

        // Comment out or remove this stage if you're skipping build
        // stage('Build') {
        //     steps {
        //         sh 'docker-compose build'
        //     }
        // }

        stage('Deploy') {
            steps {
                sh 'docker compose up -d'  // Or replace with `docker run ...` commands
            }
        }
    }
}
